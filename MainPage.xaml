<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileApp.MainPage"
             Shell.NavBarIsVisible="False">

    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#6a11cb" Offset="0.0" />
            <GradientStop Color="#4facfe" Offset="1.0" />
        </LinearGradientBrush>
    </ContentPage.Background>

    <Grid>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25"
            VerticalOptions="Center">

            <Image
                Source="terabyte.png"
                HeightRequest="180"
                Aspect="AspectFit"
                SemanticProperties.Description="Terabyte SoftWare" />

            <Label
                Text="Bienvenue!"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="36"
                FontAttributes="Bold"
                TextColor="White"
                HorizontalTextAlignment="Center" />

            <Label
                Text="Votre application de pointage horaire."
                SemanticProperties.HeadingLevel="Level2"
                FontSize="18"
                TextColor="White"
                HorizontalTextAlignment="Center" />

            <Button
                x:Name="LoginBtn"
                Text="Commencer"
                Clicked="OnStartClicked"
                HorizontalOptions="Fill"
                BackgroundColor="#FFD700"
                TextColor="Black"
                CornerRadius="25"
                HeightRequest="50"
                FontSize="18"
                FontAttributes="Bold"
                Margin="0,20,0,0">
                <Button.Shadow>
                    <Shadow Brush="Black"
                            Offset="10,10"
                            Radius="20"
                            Opacity="0.3" />
                </Button.Shadow>
            </Button>
        </VerticalStackLayout>
    </Grid>

</ContentPage>
