<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:MobileApp.ReUse"
             x:Class="MobileApp.ClientMainPage"
             Shell.NavBarIsVisible="False">

    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#6a11cb" Offset="0.0" />
            <GradientStop Color="#4facfe" Offset="1.0" />
        </LinearGradientBrush>
    </ContentPage.Background>

    <Grid RowDefinitions="Auto, *, Auto">

        <Button Text="Logout"
                Grid.Row="0"
                BackgroundColor="Transparent"
                BorderColor="White"
                BorderWidth="1"
                TextColor="White"
                CornerRadius="20"
                HorizontalOptions="End"
                Margin="20"
                Clicked="OnLogoutClicked"/>

        <VerticalStackLayout Grid.Row="1"
                             VerticalOptions="Center"
                             HorizontalOptions="Center"
                             Spacing="30">

            <Label x:Name="HiLabel"
                   FontSize="28"
                   FontAttributes="Bold"
                   TextColor="White"
                   HorizontalTextAlignment="Center" />

            <Frame BackgroundColor="#40FFFFFF"
                   CornerRadius="20"
                   Padding="30,15">
                <Label x:Name="Chrono"
                       Text="⏱️ 00:00:00"
                       FontSize="42"
                       FontAttributes="Bold"
                       TextColor="White"
                       HorizontalTextAlignment="Center" />
            </Frame>

            <Button x:Name="StartStopButton"
                    Text="Démarrer"
                    FontSize="20"
                    FontAttributes="Bold"
                    BackgroundColor="#22C55E"
                    TextColor="White"
                    CornerRadius="30"
                    HeightRequest="60"
                    WidthRequest="200"
                    Clicked="OnBtnClicked">
                <Button.Shadow>
                    <Shadow Brush="Black"
                            Offset="10,10"
                            Radius="20"
                            Opacity="0.3" />
                </Button.Shadow>
            </Button>

        </VerticalStackLayout>

        <controls:AlertPopup x:Name="MyPopup" Grid.RowSpan="3"/>

    </Grid>
</ContentPage>
